<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>LR1</servlet-name>
        <servlet-class>LR1</servlet-class>
        <init-param>
            <param-name>defaultLanguage</param-name>
            <param-value>ru</param-value>
        </init-param>
        <init-param>
            <param-name>bookmark</param-name>
            <param-value>short_description</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>LR1</servlet-name>
        <url-pattern>/LR1</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LR2</servlet-name>
        <servlet-class>LR2</servlet-class>
        <init-param>
            <param-name>defaultLanguage</param-name>
            <param-value>ru</param-value>
        </init-param>
        <init-param>
            <param-name>defaultToy</param-name>
            <param-value>Racoon</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>LR2</servlet-name>
        <url-pattern>/LR2</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Basket</servlet-name>
        <servlet-class>Basket</servlet-class>
        <init-param>
            <param-name>defaultLanguage</param-name>
            <param-value>ru</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>Basket</servlet-name>
        <url-pattern>/Basket</url-pattern>
    </servlet-mapping>
</web-app>